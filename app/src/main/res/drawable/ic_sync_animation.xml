<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:width="288dp"
            android:height="288dp"
            android:viewportWidth="210"
            android:viewportHeight="210">
            <group
                android:name="circleGroup"
                android:pivotX="105.0"
                android:pivotY="105.0"
                android:scaleX="0.9"
                android:scaleY="0.9">
                <path
                    android:name="circle"
                    android:pathData="m5,105a100,100 0,1 1,200 0a100,100 0,1 1,-200 0"
                    android:strokeWidth="5"
                    android:strokeAlpha="1"
                    android:strokeColor="#000000" />
            </group>
        </vector>
    </aapt:attr>
    <target android:name="circleGroup">
        <aapt:attr name="android:animation">
            <set>
                <set android:ordering="sequentially">
                    <objectAnimator
                        android:interpolator="@android:anim/linear_interpolator"
                        android:duration="2000"
                        android:propertyName="scaleX"
                        android:valueFrom="0.9"
                        android:valueTo="1"
                        android:valueType="floatType" />
                    <objectAnimator
                        android:interpolator="@android:anim/linear_interpolator"
                        android:duration="2000"
                        android:propertyName="scaleX"
                        android:valueFrom="0.8"
                        android:valueTo="0.9"
                        android:valueType="floatType" />
                </set>
                <set android:ordering="sequentially">
                    <objectAnimator
                        android:interpolator="@android:anim/linear_interpolator"
                        android:duration="2000"
                        android:propertyName="scaleY"
                        android:valueFrom="0.9"
                        android:valueTo="1"
                        android:valueType="floatType" />
                    <objectAnimator
                        android:interpolator="@android:anim/linear_interpolator"
                        android:duration="2000"
                        android:propertyName="scaleY"
                        android:valueFrom="0.8"
                        android:valueTo="0.9"
                        android:valueType="floatType" />
                </set>
            </set>
        </aapt:attr>
    </target>
    <target android:name="circle">
        <aapt:attr name="android:animation">
            <set android:ordering="sequentially">
                <objectAnimator
                    android:interpolator="@android:anim/linear_interpolator"
                    android:duration="2000"
                    android:propertyName="strokeAlpha"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType" />
                <objectAnimator
                    android:interpolator="@android:anim/linear_interpolator"
                    android:duration="2000"
                    android:propertyName="strokeAlpha"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>
</animated-vector>
