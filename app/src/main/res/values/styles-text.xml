<resources>

    <style name="TextAppearance.Courier.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="TextAppearance.Courier.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Courier.SubTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Courier.Body" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="TextAppearance.Courier.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextAppearance.Courier.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
