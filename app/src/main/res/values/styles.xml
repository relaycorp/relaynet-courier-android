<resources>

    <style name="Widget.Courier.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Courier.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:minHeight">96dp</item>
        <item name="iconTint">?colorOnSurface</item>
        <item name="android:theme">@style/Theme.Courier.Toolbar</item>
    </style>

    <style name="Theme.Courier.Toolbar" parent="">
        <item name="iconTint">?colorOnSurface</item>
    </style>

    <style name="Widget.Courier.ToolbarNavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="Widget.Courier.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Courier.Body</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="Widget.Courier.ToolbarTitle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">?titleTextAppearance</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Courier.ToolbarIcon" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">?colorOnSurface</item>
        <item name="android:background">@drawable/background_icon_small</item>
        <item name="android:backgroundTint">?colorOnSurface</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.Courier.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Courier.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/text_button</item>
    </style>

    <style name="Widget.Courier.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">?colorOnSurface</item>
    </style>

    <style name="Widget.Courier.Progress.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <!-- Dialog -->

    <style name="Widget.Courier.DialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Widget.Courier.DialogButton.Positive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Widget.Courier.DialogButton.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

</resources>
