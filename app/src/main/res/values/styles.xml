<resources>

    <style name="Widget.Courier.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Courier.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:minHeight">96dp</item>
    </style>

    <style name="Widget.Courier.ToolbarNavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="Widget.Courier.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Courier.Body</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="Widget.Courier.ToolbarTitle" parent="">
        <item name="android:textAppearance">?titleTextAppearance</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Courier.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Courier.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_text_color</item>
    </style>

</resources>
