<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Courier" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/relaynet_primary</item>
        <item name="colorPrimaryVariant">@color/relaynet_primary</item>
        <item name="colorSecondary">@color/relaynet_secondary</item>
        <item name="colorSecondaryVariant">@color/relaynet_secondary_variant</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/system_ui_scrim_dark</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Custom styles -->
        <item name="appBarLayoutStyle">@style/Widget.Courier.AppBar</item>
        <item name="toolbarStyle">@style/Widget.Courier.Toolbar</item>
        <item name="android:toolbarStyle">@style/Widget.Courier.Toolbar</item>
    </style>

    <style name="Theme.Courier.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>
